
<div class="row">
    <div class="col-md-6">
        <form method="post" action="/mainboard{{#if task}}/{{task.id}}?_method=PUT{{/if}}">
            {{#if task}}
            <input type="hidden" name="_method" value="PUT"> {{/if}}
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="Title" value="{{#if task}} {{task.title}} {{/if}}">
            </div>
            <div class="form-group">
                <textarea class="form-control" rows="2" name="details" placeholder="Details">{{#if task}} {{task.details}} {{/if}}</textarea>
            </div>
            <button type="submit" class="btn btn-primary text-center">Done</button>
        </form>

    </div>


    {{#if tasks}}
    <div class="col-md-6" id="card">
        <div class="card">

            <ul class="list-group list-group-flush" id="#accordion">

                {{#each tasks}}
                <li class="list-group-item">{{title}}
                    <div class="float-right d-flex align-items-center">
                        {{#if details}}
                        <a class="btn float-right" data-toggle="collapse" data-target="#collapse{{@index}}" aria-expanded="true" aria-controls="collapse{{@index}}">
                            <i class="fas fa-angle-down"></i>
                        </a>
                        {{/if}}
                        <a href="/mainboard/edit/{{id}}" class="btn btn-sm btn-secondary mx-2">
                            Edit
                        </a>

                        <form method="post" action="mainboard/{{id}}?_method=DELETE">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="submit" class="btn btn-sm btn-danger float-right" value="Delete">
                        </form>
                    </div>

                    <p id="collapse{{@index}}" class="collapse" aria-labelledby="heading{{@index}}" data-parent="#accordion">
                        {{details}}
                    </p>
                </li>

                {{!-- {{else}}
                <li class="list-group-item">No tasks here...</li> --}} {{/each}}




            </ul>
        </div>

    </div>
    {{/if}}
</div>