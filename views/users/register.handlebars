<div class="row">
    <div class="col-md-6 mx-auto">
        <div class="card card-body">
            <h3 class="text-center">Account Register</h3>
            <form method="POST" action="/users/register">
                <div class="form-group">
                    <label for="name" class="sr-only">Name</label>
                    <input type="text" class="form-control" name="name" placeholder="Name" value="{{name}}" required>
                </div>
                <div class="form-group">
                    <label for="email" class="sr-only">Email</label>
                    <input type="email" class="form-control" name="email" placeholder="Email" value="{{email}}" required>
                </div>
                <div class="form-group">
                    <label for="password" class="sr-only">Password</label>
                    <input type="password" class="form-control" name="password" placeholder="Password" value="{{password}}" required>
                </div>
                <div class="form-group">
                    <label for="password2" class="sr-only">Confirm Password</label>
                    <input type="password" class="form-control" name="password2" placeholder="Confirm Password" value="{{password2}}" required>
                </div>
                <button type="submit" class="btn btn-primary d-block mx-auto">Login</button>
            </form>
        </div>
    </div>
</div>